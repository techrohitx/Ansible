---
- name: convert lemp into lamp using variable
  hosts: localhost
  # define variable and assing values
  vars:
   new_pkg: httpd
   web_pkg: nginx # hard coding
   db_pkg: mariadb105-server
   php_pkg:
    - php
    - php-fpm
   web_service: nginx
   db_service: mariadb
   php_service: php-fpm
   web_file_path: /var/www/html/index.php
  tasks:
  - name: install httpd
    ansible.builtin.dnf:
      name: "{{new_pkg}}"
      state: present
  - name: install nginx
    ansible.builtin.dnf:
      name: "{{web_pkg}}"
      state: present
  - name: install mariadb
    ansible.builtin.dnf:
      name: "{{db_pkg}}"
      state: present
  - name: install php-fpm
    ansible.builtin.dnf:
      name: "{{php_pkg}}"
      state: present
  - name : stop and disable nginx
    ansible.builtin.systemd_service:
      name: "{{web_service}}"
      state: stopped
      enabled: false
  - name : start and enable httpd
    ansible.builtin.systemd_service:
      name: "{{new_pkg_service}}"
      state: started
      enabled: true
  - name : start and enable db
    ansible.builtin.systemd_service:
      name: "{{db_service}}"
      state: started
      enabled: true
  - name : start and enable php-fpm
    ansible.builtin.systemd_service:
      name: "{{php_service}}"
      state: started
      enabled: true
  - name : deploy php page
    ansible.builtin.copy:
     dest: "{{web_file_path}}"
     content:
      <?php
      phpinfo();
      ?>


